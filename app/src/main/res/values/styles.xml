<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextForTimer" parent="Theme.MaterialComponents.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textSize">120sp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
</style>
    <style name="ForSeekBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="android:thumbTint">@color/white</item>
        <item name="android:thumbTintMode">screen</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:progressBackgroundTint">#ffffff</item>
        <item name="android:progressBackgroundTintMode">screen</item>
        <item name="android:progressTint">#ffffff</item>
        <item name="android:progressTintMode">screen</item>
        <item name="android:progressDrawable">@drawable/seekbar_style</item>
        <item name="android:thumb">@drawable/custom_thumb</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="ForTxtInputSettings">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ForTxtNameForSettings" parent="ForSeekBar">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>
